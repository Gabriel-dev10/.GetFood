generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model produtos {
  id         Int     @id @default(autoincrement()) @db.UnsignedInt
  nome       String? @db.VarChar(60)
  descricao  String? @db.VarChar(155)
  preco      Decimal @default(0.00) @db.Decimal(10, 2)
  imagem_url String? @db.VarChar(255)
  categoria  String? @db.VarChar(50)
}

model recompensas_disponiveis {
  id           Int       @id @default(autoincrement()) @db.UnsignedInt
  titulo       String    @db.VarChar(100)
  descricao    String?   @db.VarChar(255)
  pontos       Int       @db.UnsignedInt
  ativo        Boolean?  @default(true)
  data_criacao DateTime? @default(now()) @db.Timestamp(0)
}

model User {
  id                    Int      @id @default(autoincrement()) @db.UnsignedInt
  // O NextAuth (com adapter) espera os campos: name, email, emailVerified, image
  name                  String?  @map("nome") @db.VarChar(60) // Mapeado para 'nome'
  email                 String   @unique(map: "email") @db.VarChar(255)
  emailVerified         DateTime? @map("email_verified") // Novo campo necess√°rio
  image                 String?  @map("foto") @db.VarChar(255) // Mapeado para 'foto'
  
  // Campos existentes
  token                 String   @unique(map: "token") @db.VarChar(12)
  dataNascimento        DateTime? @db.Date
  senha                 String?  @db.VarChar(64) // Campo mantido para login com Credenciais
  telefone              String?  @db.VarChar(45)
  status                String   @default("ATIVO") @db.VarChar(15)
  dataUltimoAcesso      DateTime? @db.DateTime(0)
  dataUltimaModificacao DateTime @default(now()) @db.Timestamp(0)
  tokenSenha            String?  @db.VarChar(100)
  dataSenha             DateTime? @db.Timestamp(0)
  data                  DateTime @default(now()) @db.Timestamp(0)
  dataExclusao          DateTime? @db.Timestamp(0)
  pontos_total          Int      @default(0) @db.UnsignedInt

  // Relacionamentos com o NextAuth Adapter
  accounts Account[]
  sessions Session[]

  // Outros relacionamentos existentes
  atividades_usuario    atividades_usuario[]
  estatisticas_usuario  estatisticas_usuario?
  qr_scans              qr_scans[]
  usuarios_conquistas   usuarios_conquistas[]

  @@map("users") // Mapeia o modelo "usuarios" para a tabela "users" no banco (ou mantenha "usuarios" e configure o adapter)
}


model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

model conquistas {
  id                  Int                   @id @default(autoincrement()) @db.UnsignedInt
  titulo              String                @db.VarChar(100)
  descricao           String                @db.VarChar(255)
  icone               String                @db.VarChar(50)
  pontos_necessarios  Int                   @db.UnsignedInt
  ativo               Boolean               @default(true)
  data_criacao        DateTime              @default(now()) @db.Timestamp(0)
  usuarios_conquistas usuarios_conquistas[]
}

model usuarios_conquistas {
  id               Int        @id @default(autoincrement()) @db.UnsignedInt
  usuario_id       Int        @db.UnsignedInt
  conquista_id     Int        @db.UnsignedInt
  desbloqueada     Boolean    @default(false)
  data_desbloqueio DateTime?  @db.Timestamp(0)
  conquistas       conquistas @relation(fields: [conquista_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  user             User   @relation(fields: [usuario_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([usuario_id, conquista_id])
  @@index([usuario_id], map: "idx_usuario_conquistas")
  @@index([conquista_id], map: "idx_conquista")
}

model qr_codes {
  id        Int       @id @default(autoincrement())
  codigo    String    @unique(map: "codigo") @db.VarChar(255)
  descricao String    @db.Text
  criado_em DateTime? @default(now()) @db.Timestamp(0)
}

model atividades_usuario {
  id             Int      @id @default(autoincrement()) @db.UnsignedInt
  usuario_id     Int      @db.UnsignedInt
  tipo_atividade String   @db.VarChar(50)
  descricao      String?  @db.VarChar(255)
  pontos_ganhos  Int?     @default(0) @db.UnsignedInt
  data_atividade DateTime @default(now()) @db.Timestamp(0)
  user       User @relation(fields: [usuario_id], references: [id], onDelete: Cascade, onUpdate: Restrict, map: "atividades_usuario_id_fkey")

  @@index([data_atividade], map: "idx_data_atividade")
  @@index([tipo_atividade], map: "idx_tipo_atividade")
  @@index([usuario_id], map: "idx_usuario_atividades")
}

model estatisticas_usuario {
  id                Int       @id @default(autoincrement()) @db.UnsignedInt
  usuario_id        Int       @unique(map: "usuario_id") @db.UnsignedInt
  total_qr_scans    Int?      @default(0) @db.UnsignedInt
  total_resgates    Int?      @default(0) @db.UnsignedInt
  dias_consecutivos Int?      @default(0) @db.UnsignedInt
  ultima_atividade  DateTime? @db.Timestamp(0)
  atualizado_em     DateTime  @default(now()) @db.Timestamp(0)
  user          User  @relation(fields: [usuario_id], references: [id], onDelete: Cascade, onUpdate: Restrict, map: "estatisticas_usuario_id_fkey")

  @@index([usuario_id], map: "idx_usuario_stats")
}

model qr_scans {
  id            Int      @id @default(autoincrement()) @db.UnsignedInt
  usuario_id    Int      @db.UnsignedInt
  codigo_qr     String   @db.VarChar(255)
  pontos_ganhos Int?     @default(10) @db.UnsignedInt
  data_scan     DateTime @default(now()) @db.Timestamp(0)
  user          User @relation(fields: [usuario_id], references: [id], onDelete: Cascade, onUpdate: Restrict)

  @@index([data_scan], map: "idx_data_scan")
  @@index([usuario_id], map: "idx_usuario_scans")
}

model Account {
  id                String  @id @default(cuid())
  userId            Int     @map("user_id") @db.UnsignedInt // Relacionamento com o seu modelo "usuarios"
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId], map: "Account_provider_providerAccountId_key")
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       Int      @map("user_id") @db.UnsignedInt // Relacionamento com o seu modelo "usuarios"
  expires      DateTime
  user         User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}


